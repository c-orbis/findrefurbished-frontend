---
import Layout from '../../layouts/Layout.astro';

const { slug } = Astro.params;

// Gebruik tijdelijk hardcoded gegevens om alle variabelen uit te sluiten
const host = "https://api.findrefurbished.com";
const key = "Test543";

let product = null;
let debugError = null;

try {
  const response = await fetch(host + '/indexes/products/search', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Authorization': 'Bearer ' + key
    },
    body: JSON.stringify({
      // We gebruiken enkelvoudige quotes binnen de filter string
      filter: `variant_slug = '${slug}'`,
      limit: 1
    })
  });

  const data = await response.json();
  
  if (data.hits && data.hits.length > 0) {
    product = data.hits[0];
  } else {
    debugError = "Meilisearch vond 0 producten voor slug: " + slug;
  }
} catch (e) {
  debugError = "Fetch fout: " + e.message;
}

// WE HALEN DE REDIRECT ER EVEN UIT OM TE DEBUGGEN
// if (!product) { return Astro.redirect('/404'); }

const sortedOffers = product?.offers?.sort((a, b) => Number(a.price) - Number(b.price)) || [];
---

<Layout title={product ? `${product.title_h1} Vergelijken` : "Debug Pagina"}>
  <main class="max-w-5xl mx-auto px-4 py-12">
    {!product ? (
      <div class="bg-red-50 p-8 border border-red-200 rounded-xl text-red-700">
        <h1 class="text-2xl font-bold mb-4">Debug Informatie</h1>
        <p class="mb-2"><strong>Gezochte Slug:</strong> {slug}</p>
        <p><strong>Status:</strong> {debugError}</p>
        <div class="mt-4 p-4 bg-white border rounded text-xs font-mono overflow-auto">
           Check of de variant_slug in Meilisearch EXACT matcht met de gezochte slug.
        </div>
      </div>
    ) : (
      <div class="grid md:grid-cols-2 gap-12 mb-16 items-center">
        <div class="bg-white p-8 rounded-3xl border border-gray-100 shadow-sm flex justify-center">
          <img 
            src={"https://img.findrefurbished.com/" + product.master_id + ".png"} 
            alt={product.title_h1}
            class="max-h-[400px] object-contain"
            onerror="this.src='https://placehold.co/200x200?text=Geen+Foto'"
          />
        </div>
        <div>
          <h1 class="text-4xl font-black mb-4 leading-tight">{product.title_h1}</h1>
          <div class="inline-block bg-blue-600 text-white px-8 py-4 rounded-2xl font-black text-3xl">
            €{Number(product.min_price).toFixed(2)}
          </div>
        </div>
      </div>

      <h2 class="text-2xl font-black mb-8">Beschikbare prijzen</h2>
      <div class="space-y-4">
        {sortedOffers.map((offer) => (
          <div class="bg-white border border-gray-100 p-6 rounded-2xl flex justify-between items-center">
            <div class="font-black text-xl">{offer.merchant}</div>
            <div class="flex items-center gap-6">
              <div class="text-2xl font-black">€{Number(offer.price).toFixed(2)}</div>
              <a href={offer.link} target="_blank" rel="nofollow" class="bg-gray-900 text-white px-6 py-2 rounded-xl font-bold text-sm">
                Bekijk deal
              </a>
            </div>
          </div>
        ))}
      </div>
    )}
  </main>
</Layout>
