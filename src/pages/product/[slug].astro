---
import Layout from '../../layouts/Layout.astro';

const { slug } = Astro.params;

let product = null;
let errorInfo = null;

try {
  // We bouwen de URL weer handmatig op zoals die werkte
  const response = await fetch('https://api.findrefurbished.com' + '/indexes/products/search', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Authorization': 'Bearer Test543'
    },
    body: JSON.stringify({
      filter: `variant_slug = "${slug}"`,
      limit: 1
    })
  });

  const data = await response.json();
  
  if (data.hits && data.hits.length > 0) {
    product = data.hits[0];
  } else {
    errorInfo = "Product niet gevonden in database";
  }
} catch (e) {
  errorInfo = e.message;
}

if (!product) {
  return Astro.redirect('/404');
}

const sortedOffers = product.offers?.sort((a, b) => Number(a.price) - Number(b.price)) || [];
---

<Layout title={`${product.title_h1} Vergelijken - Vind Refurbished`}>
  <main class="max-w-5xl mx-auto px-4 py-12 text-gray-900">
    <div class="grid md:grid-cols-2 gap-12 mb-16 items-center">
      <div class="bg-white p-8 rounded-3xl border border-gray-100 shadow-sm flex justify-center">
        <img 
          src={`https://img.findrefurbished.com/${product.master_id}.png`} 
          alt={product.title_h1}
          class="max-h-[400px] object-contain"
          onerror="this.src='https://placehold.co/200x200?text=Geen+Foto'"
        />
      </div>
      <div>
        <h1 class="text-4xl font-black mb-4">{product.title_h1}</h1>
        <div class="inline-block bg-blue-600 text-white px-6 py-3 rounded-2xl font-black text-2xl">
          €{Number(product.min_price).toFixed(2)}
        </div>
      </div>
    </div>

    <h2 class="text-2xl font-black mb-8">Beschikbare prijzen</h2>
    <div class="space-y-4">
      {sortedOffers.map((offer) => (
        <div class="bg-white border border-gray-100 p-6 rounded-2xl flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="font-black text-xl text-gray-800">{offer.merchant}</div>
          <div class="flex items-center gap-6">
            <div class="text-2xl font-black">€{Number(offer.price).toFixed(2)}</div>
            <a href={offer.link} target="_blank" rel="nofollow" class="bg-gray-900 text-white px-6 py-2 rounded-xl font-bold text-sm hover:bg-blue-600 transition-colors">
              Bekijk deal
            </a>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>
