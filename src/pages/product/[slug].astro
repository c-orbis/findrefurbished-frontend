---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';

const { slug } = Astro.params;

// Gebruik de variabelen, maar met de 'oude' vertrouwde optel-methode
const host = import.meta.env.PUBLIC_MEILI_HOST || "https://api.findrefurbished.com";
const key = import.meta.env.MEILI_SERVER_KEY || import.meta.env.PUBLIC_MEILI_SEARCH_KEY;

let product = null;

try {
    // Bouw de URL op een veilige manier
    const apiUrl = host + "/indexes/products/search";
    
    const response = await fetch(apiUrl, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Authorization': 'Bearer ' + key
    },
    body: JSON.stringify({
      q: slug, 
      filter: "variant_slug = '" + slug + "'", // DIT IS DE CRUCIALE REGEL
      limit: 1
    })
  });

  const data = await response.json();
  if (data.hits && data.hits.length > 0) {
  product = data.hits[0]; // GOED: Dit pakt het eerste product uit de lijst
}
} catch (e) {
  console.error("Fetch error:", e.message);
}

// Zet de redirect tijdelijk uit tot je zeker weet dat het werkt
if (!product) { return Astro.redirect('/404'); }

const sortedOffers = product?.offers?.sort((a, b) => Number(a.price) - Number(b.price)) || [];

// 1. Maak een pakkende omschrijving voor Google
const seoDescription = `Vergelijk prijzen voor de refurbished ${product.title_h1}. Nu beschikbaar vanaf €${Number(product.min_price).toFixed(2)} bij ${product.offers?.length} verschillende aanbieders.`;

// 2. Bouw het JSON-LD Schema (Rich Snippet)
const productSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": product.title_h1,
  "image": `https://img.findrefurbished.com/${product.master_id}.png`,
  "description": seoDescription,
  "brand": { "@type": "Brand", "name": product.brand },
  "offers": {
    "@type": "AggregateOffer",
    "priceCurrency": "EUR",
    "lowPrice": product.min_price,
    "offerCount": product.offers?.length || 1,
    "availability": "https://schema.orgInStock"
  }
};

// s-maxage=3600 (Vercel onthoudt de pagina 1 uur lang op hun servers)
// stale-while-revalidate=600 (Als de cache verloopt, serveer dan nog 10 min de oude terwijl de nieuwe op de achtergrond wordt gemaakt)
Astro.response.headers.set('Cache-Control', 'public, s-maxage=3600, stale-while-revalidate=600');
---

<Layout 
  title={`${product.title_h1} Vergelijken | Vind Refurbished`}
  description={seoDescription}
  schema={productSchema}
    >
  <main class="max-w-5xl mx-auto px-4 py-12">
    {!product ? (
      <div class="p-10 text-center bg-gray-50 rounded-2xl border-2 border-dashed">
        <h1 class="text-xl font-bold text-gray-400">Productgegevens worden geladen of zijn niet gevonden...</h1>
        <p class="text-sm text-gray-400 mt-2">Slug: {slug}</p>
      </div>
    ) : (
      <div class="grid md:grid-cols-2 gap-12 mb-16 items-center">
        <div class="bg-white p-8 rounded-[2.5rem] border border-gray-100 shadow-sm flex justify-center min-h-[350px] items-center">
          
          <!-- PRODUCTFOTO FIX -->
          <Image 
            src={`https://img.findrefurbished.com/${product.master_id}.png`}
            alt={`Refurbished ${product.title_h1}`}
            width={400} 
            height={400}
            format="webp"
            quality="mid"
            class="max-h-[350px] w-auto object-contain"
            loading="eager" 
            fetchpriority="high" 
          />

        </div>
        <div>
          <nav class="text-[10px] font-bold text-gray-400 uppercase tracking-widest mb-4">
            Home / {product.brand}
          </nav>
          <h1 class="text-4xl md:text-5xl font-black text-gray-900 mb-6 leading-tight">{product.title_h1}</h1>
          <div class="inline-block bg-blue-600 text-white px-8 py-4 rounded-2xl font-black text-3xl shadow-xl shadow-blue-100">
            €{Number(product.min_price).toFixed(2)}
          </div>
        </div>
      </div>

      <h2 class="text-2xl font-black mb-8 tracking-tight italic text-gray-900">Beschikbare prijzen</h2>
      <div class="space-y-4">
        {sortedOffers.map((offer) => {
          // Bepaal de logo URL voor de merchant
          const merchantSlug = offer.merchant.toLowerCase().replace(/\s+/g, '-');
          const logoUrl = "https://img.findrefurbished.com/merchants/" + merchantSlug + ".png";
          
          return (
            <div class="bg-white border border-gray-100 p-6 rounded-2xl flex flex-col md:flex-row items-center justify-between gap-6 hover:border-blue-500 transition-all shadow-sm">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-gray-50 rounded-xl flex items-center justify-center p-2 border border-gray-100 shadow-inner overflow-hidden">
                  
                  <!-- MERCHANT LOGO FIX: Nu met juiste /merchants/ pad -->
                  <Image 
                    src={logoUrl} 
                    alt={`Logo van ${offer.merchant}`}
                    width={80} 
                    height={80}
                    class="max-h-full max-w-full object-contain"
                  />
                  
                </div>
                <div class="font-black text-xl text-gray-800">{offer.merchant}</div>
              </div>
              
              <div class="flex items-center gap-8">
                <div class="text-2xl font-black text-gray-900">€{Number(offer.price).toFixed(2)}</div>
                <a href={offer.link} target="_blank" rel="nofollow" class="bg-gray-900 text-white px-8 py-3 rounded-xl font-bold text-sm hover:bg-blue-600 transition-colors">
                  Bekijk deal
                </a>
              </div>
            </div>
          );
        })}
      </div>
    )}
  </main>
</Layout>
