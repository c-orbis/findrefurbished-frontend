---
import Layout from '../../layouts/Layout.astro';

const { slug } = Astro.params;

// We halen de variabelen op uit de Vercel omgeving
const host = import.meta.env.PUBLIC_MEILI_HOST;
const key = import.meta.env.PUBLIC_MEILI_SEARCH_KEY;

let product = null;

try {
  // We bouwen de URL veilig op
  const apiUrl = host + "/indexes/products/search";

  const response = await fetch(apiUrl, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Authorization': `Bearer ${key}`
    },
    body: JSON.stringify({
      filter: `variant_slug = "${slug}"`,
      limit: 1
    })
  });

  const data = await response.json();
  if (data.hits && data.hits.length > 0) {
    product = data.hits[0];
  }
} catch (e) {
  console.error("Fetch error:", e);
}

if (!product) {
  return Astro.redirect('/404');
}

const sortedOffers = product.offers?.sort((a, b) => Number(a.price) - Number(b.price)) || [];
---


<Layout title={product ? `${product.title_h1} Vergelijken` : "Laden..."}>
  <main class="max-w-5xl mx-auto px-4 py-12">
    {!product ? (
      <div class="bg-red-50 p-8 border border-red-200 rounded-xl">
        <h1 class="text-red-600 font-bold text-2xl mb-4">Product niet gevonden!</h1>
        <p class="mb-4">Zocht naar slug: <strong>{slug}</strong></p>
        <pre class="bg-gray-900 text-green-400 p-4 rounded overflow-auto text-xs font-mono">
          {JSON.stringify(debugInfo, null, 2)}
        </pre>
        <a href="/" class="mt-4 inline-block text-blue-600 underline font-bold">Terug naar zoeken</a>
      </div>
    ) : (
      <div class="grid md:grid-cols-2 gap-12 mb-12">
        <div class="bg-white p-8 rounded-3xl border border-gray-100 flex justify-center shadow-sm">
          <img 
            src={`https://img.findrefurbished.com/${product.master_id}.png`} 
            class="max-h-[400px] object-contain" 
            onerror="this.src='https://placehold.co/200x200?text=Geen+Foto'"
          />
        </div>
        <div>
          <nav class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">
            {product.brand} / {product.category_primary}
          </nav>
          <h1 class="text-4xl font-black text-gray-900 mb-6 leading-tight">{product.title_h1}</h1>
          <div class="inline-block bg-blue-600 text-white px-8 py-4 rounded-2xl shadow-xl shadow-blue-100">
            <span class="text-xs uppercase font-bold block opacity-80 mb-1">Vanaf</span>
            <span class="text-4xl font-black text-white">€{Number(product.min_price).toFixed(2)}</span>
          </div>
        </div>
      </div>

      <h2 class="text-2xl font-black text-gray-900 mb-6 tracking-tight">Vergelijk alle prijzen</h2>
      <div class="grid gap-4">
        {sortedOffers.map((offer) => (
          <div class="p-6 bg-white border border-gray-100 rounded-2xl flex flex-col md:flex-row justify-between items-center shadow-sm hover:border-blue-500 transition-all">
            <div class="mb-4 md:mb-0">
              <div class="font-black text-xl text-gray-900">{offer.merchant}</div>
              <div class="flex gap-2 mt-1">
                <span class="text-[10px] bg-gray-100 text-gray-500 px-2 py-0.5 rounded font-bold uppercase tracking-tighter">{offer.condition}</span>
                <span class="text-[10px] bg-blue-50 text-blue-500 px-2 py-0.5 rounded font-bold uppercase tracking-tighter">{offer.color}</span>
              </div>
            </div>
            <div class="text-center md:text-right w-full md:w-auto">
              <div class="text-3xl font-black text-gray-900 mb-2">€{Number(offer.price).toFixed(2)}</div>
              <a href={offer.link} target="_blank" rel="nofollow" class="block w-full bg-gray-900 text-white px-8 py-3 rounded-xl font-bold text-sm hover:bg-blue-600 transition-colors">
                Bekijk bij {offer.merchant}
              </a>
            </div>
          </div>
        ))}
      </div>
    )}
  </main>
</Layout>
