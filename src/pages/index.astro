---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Debug - Vind Refurbished">
  <main class="max-w-4xl mx-auto p-10">
    <h1 class="text-2xl font-bold mb-5">Zoekmachine Debug Mode</h1>
    <div id="searchbox" class="mb-5 border p-2"></div>
    <div id="hits"></div>
  </main>

  <div id="meili-data" 
       data-host={import.meta.env.PUBLIC_MEILI_HOST} 
       data-key={import.meta.env.PUBLIC_MEILI_SEARCH_KEY}>
  </div>
</Layout>

<script>
  // We importeren de functies direct uit de geïnstalleerde pakketten
  import { instantMeiliSearch } from '@meilisearch/instant-meilisearch';
  import instantsearch from 'instantsearch.js';
  import { searchBox, hits } from 'instantsearch.js/es/widgets';

  function init() {
    const dataEl = document.getElementById('meili-data');
    if (!dataEl) return;

    // Haal de host en key op, forceer HTTPS voor veiligheid
    const host = dataEl.dataset.host?.replace('http://', 'https://');
    const key = dataEl.dataset.key;

    if (!host || !key) {
      console.error("Meilisearch configuratie ontbreekt in Vercel!");
      return;
    }

    // We maken de client aan via de officiële SDK
    const searchClient = instantMeiliSearch(host, key);

    const search = instantsearch({
      indexName: 'products',
      searchClient: searchClient,
      future: { preserveSharedStateOnUnmount: true }
    });

    search.addWidgets([
      searchBox({ 
        container: '#searchbox',
        placeholder: 'Zoek op model...' 
      }),
      hits({
        container: '#hits',
        templates: {
          item: (hit) => `
            <div class="p-4 border mb-2 bg-white rounded-xl shadow-sm flex justify-between items-center">
              <div>
                <span class="text-green-600">✅</span> 
                <strong class="text-gray-900">${hit.title_h1 || 'Product'}</strong>
              </div>
              <div class="font-bold text-blue-600">€${hit.min_price}</div>
            </div>
          `,
          empty: '<div class="p-10 text-center text-gray-500">❌ Geen producten gevonden in index "products".</div>'
        }
      })
    ]);

    search.on('render', () => {
      console.log("Hits gevonden:", search.helper?.lastResults?.nbHits);
    });

    search.start();
    console.log("Zoekmachine succesvol gestart via Astro Bundler.");
  }

  // Voer uit bij laden en bij Astro pagina-wisselingen
  document.addEventListener('astro:page-load', init);
  init();
</script>
